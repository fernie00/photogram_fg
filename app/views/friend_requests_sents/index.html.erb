<div class="page-header">
  <h1>
    Friend requests sents
    <a href="/friend_requests_sents/new" class="btn btn-lg btn-success">New Friend requests sent</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Actions</th>
      </tr>

      <% @friend_requests_sents.each do |friend_requests_sent| %>
      <tr>
        <td>
          <% if friend_requests_sent.sender.present? %>
            <a href="/users/<%= friend_requests_sent.sender.id %>">
              <%= friend_requests_sent.sender.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if friend_requests_sent.recipient.present? %>
            <a href="/users/<%= friend_requests_sent.recipient.id %>">
              <%= friend_requests_sent.recipient.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/friend_requests_sents/<%= friend_requests_sent.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == friend_requests_sent.sender %>
            <a href="/friend_requests_sents/<%= friend_requests_sent.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_friend_requests_sent/<%= friend_requests_sent.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @friend_requests_sents, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
