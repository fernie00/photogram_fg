<!-- Validation failure messages -->
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Comment</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_comment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for body_comment -->
      <div class="form-group">
        <label for="body_comment" class="control-label">
          Body comment
        </label>

        <textarea id="body_comment" name="body_comment" placeholder="Body comment" class="form-control" rows="3"><%= @comment.body_comment %></textarea>
      </div>

      <!-- Label and input for photo_id -->
      <div class="form-group">
        <label for="photo_id" class="control-label">
          Photo
        </label>

        <%= select_tag(:photo_id, options_from_collection_for_select(Photo.all, :id, :name_photo, @comment.photo_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Comment
      </button>
      or
      <a href="/comments">Cancel</a>
    </form>
  </div>
</div>
